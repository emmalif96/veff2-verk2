<%- include('header') -%>

<h1> Atvinnuumsókn </h1>
<form method="post" action="/register">
    <div class="post__form">
        <div class="post__row">
            <label for="name">Nafn</label>
            <input class="input <% if(errors.hasOwnProperty('name')){ %> invalid <% } %>" id="name" name="name" value="<%= name %>">
        </div>
        <div class="post__row">
            <label for="email">Netfang</label>
            <input class="input <% if(errors.hasOwnProperty('email')){ %> invalid <% } %>" id="email" name="email" value="<%= email %>">
        </div>
        <div class="post__row">
            <label for="phone">Sími</label>
            <input class="input <% if(errors.hasOwnProperty('phone')){ %> invalid <% } %>" id="phone" name="phone" value="<%= phone %>" {<% if(phone == 'NaN') phone = '' %>}>
        </div>
        <div class="post__row">
            <label for="texti">Kynning á þér: </label>
            <textarea class ="input <% if(errors.hasOwnProperty('texti')){ %> invalid <% } %>" rows="4" id="texti" name="texti"><%= texti %></textarea>
        </div>
    </div>
    <h3>Starf sem sótt er um: </h3>
        <div class="post__radio">
        <div class="radio <% if(errors.hasOwnProperty('job')){ %> invalid <% } %>">
        <input type="radio" name="job" value="Forritari" {<% if(job == 'Forritari'){ %> checked="checked" <% } %>)}> Forritari <br>
    </div>
    <div class="radio <% if(errors.hasOwnProperty('job')){ %> invalid <% } %>">
        <input type="radio" name="job" value="Hönnuður"<% if(job == 'Hönnuður'){ %> checked="checked" <% } %>> Hönnuður <br>
    </div>
    <div class="radio <% if(errors.hasOwnProperty('job')){ %> invalid <% } %>">
        <input type="radio" name="job" value="Verkefnastjóri"<% if(job == 'Verkefnastjóri'){ %> checked="checked" <% } %>> Verkefnastjóri <br> 
    </div>
</div>


<% if (Object.keys(errors).length > 0) { %>
    <h2> Vandræði við að senda inn umsókn</h2>
    <% } %>    
    <ul>
        <% for (let key in errors) {
            if(!errors.hasOwnProperty(key)) continue; 
            const val = errors[key];
        %>
        <li><%= val.msg %></li>
        <% } %>    
    </ul>
    <button>Senda Umsókn </button>
    </form>
    
    <%- include('footer') -%>